    // End of variables declaration//GEN-END:variables
    
    public void setVisible () {
        jTextAreaHistory.setText(mainFrameCommandHistory.getAllCommands());
        this.setVisible(true);
        jTextAreaHistory.requestFocusInWindow();
    }

    private void storeHistory () {
        mainFrameCommandHistory.setAllCommands(jTextAreaHistory.getText());
    }
    

}
