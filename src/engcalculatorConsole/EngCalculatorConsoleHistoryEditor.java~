    }//GEN-LAST:event_jButtonCancelActionPerformed

    private void jButtonDeleteAllActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonDeleteAllActionPerformed
        jTextAreaHistory.setText("");
    }//GEN-LAST:event_jButtonDeleteAllActionPerformed

    private void jButtonSaveLoadExecActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonSaveLoadExecActionPerformed
        mainFrameCommandHistory.setAllCommands(jTextAreaHistory.getText());
        eccmfParent.saveLoadExec();
    }//GEN-LAST:event_jButtonSaveLoadExecActionPerformed

    private void jButtonFind1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonFind1ActionPerformed

    }//GEN-LAST:event_jButtonFind1ActionPerformed

    private void jButtonReplaceActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonReplaceActionPerformed
        if (replaceBox == null) replaceBox = new EngCalculatorConsoleReplace(jTextAreaHistory);
        replaceBox.setVisible(true);
    }//GEN-LAST:event_jButtonReplaceActionPerformed

    private void jButtonFindActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonFindActionPerformed
        if (findBox == null) findBox = new EngCalculatorConsoleFind(jTextAreaHistory);
        findBox.setVisible(true);
    }//GEN-LAST:event_jButtonFindActionPerformed

